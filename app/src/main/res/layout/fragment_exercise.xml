<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Exercise Name EditText -->
    <EditText
        android:id="@+id/et_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="exercise name"
        android:hint="@string/hint_exercise_name"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_muscle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="muscle group"
        android:hint="@string/hint_muscle_group"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_add_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_exercise" />

    <!-- RecyclerView to display exercises -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
